    #    active_workspace #333333 #333333 #888888
    #    inactive_workspace #333333 #333333 #ffffff
    #    urgent_workspace #eb709b #eb709b #ffffff
    #}
}

# Switch between workspaces on current output (monitor) via $mod+tab
bindsym $mod+Tab workspace next_on_output
bindsym $mod+Shift+Tab workspace prev_on_output

# Refresh i3blocks when switching layout
bindcode Mod1+50 exec --no-startup-id pkill -SIGRTMIN+1 i3blocks
bindcode Shift+64 exec --no-startup-id pkill -SIGRTMIN+1 i3blocks

# Multimedia keyboard support
bindsym --release XF86AudioRaiseVolume exec --no-startup-id amixer -q set Master 5%+ unmute && pkill -SIGRTMIN+10 i3blocks #increase sound volume
bindsym --release XF86AudioLowerVolume exec --no-startup-id amixer -q set Master 5%- unmute && pkill -SIGRTMIN+10 i3blocks #decrease sound volume
bindsym --release XF86AudioMute exec amixer --no-startup-id -q set Master toggle && pkill -SIGRTMIN+10 i3blocks # mute sound

bindsym XF86AudioPlay exec --no-startup-id "mpc toggle"
bindsym XF86AudioStop exec --no-startup-id "mpc stop"
bindsym XF86AudioNext exec --no-startup-id "mpc next"
bindsym XF86AudioPrev exec --no-startup-id "mpc prev"

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5 # decrease screen brightness

# Jump to urgent window
bindsym $mod+x [urgent=latest] focus

