#!/usr/bin/env bash

# WMRC
# Configuration for my wmutils based setup

# main layout
GAP=15
BAR=30

# panel height
#
# the difference between $BAR and $PANEL will be used as an offset from the top
# and right edges of the monitor
PANEL=$((BAR + GAP))

# window border width
BW=6
# active border color
ACTIVE=0x87404f
# inactive border color
INACTIVE=0x323232

# groups
GROOT=/tmp/groups.sh
GNUMBER=5

# For tiling
MASTER_AREA=60 # in percent

